get_filename_component(PACKAGE_PREFIX_DIR "${CMAKE_CURRENT_LIST_DIR}/../../../" ABSOLUTE)

if (IS_DIRECTORY ${PACKAGE_PREFIX_DIR}/lib)
    find_library(PACKAGE_LIBRARIES @PROJECT_NAME@ HINTS ${PACKAGE_PREFIX_DIR}/lib)
else()
    find_library(PACKAGE_LIBRARIES @PROJECT_NAME@)
endif()

if (IS_DIRECTORY ${PACKAGE_PREFIX_DIR}/include)
    find_path(PACKAGE_INCLUDE_DIRS @PROJECT_NAME@.hpp HINTS ${PACKAGE_PREFIX_DIR}/include)
else()
    find_path(PACKAGE_INCLUDE_DIRS @PROJECT_NAME@.hpp)
endif()

if(NOT PACKAGE_LIBRARIES OR NOT PACKAGE_INCLUDE_DIRS)
    set(@PROJECT_NAME@_FOUND 0)
endif()
